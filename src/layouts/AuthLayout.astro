---
import MainLayout from '@/layouts/MainLayout.astro';

interface Props {
  title?: string;
}

const { title = 'Auth â€” 10x Facts' } = Astro.props;
---

<MainLayout title={title}>
  <div class="relative min-h-screen bg-background text-foreground">
    <div
      class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(1200px_circle_at_15%_-10%,color-mix(in_oklch,var(--primary)_20%,transparent),transparent_55%),radial-gradient(900px_circle_at_85%_0%,color-mix(in_oklch,var(--primary)_12%,transparent),transparent_60%)]"
    ></div>
    <main
      class="flex min-h-screen items-center justify-center px-4 py-10 sm:px-6"
    >
      <div class="flex w-full max-w-[420px] flex-col gap-10 sm:max-w-[480px]">
        <div class="flex flex-col items-center gap-4 text-center">
          <div
            class="inline-flex size-12 items-center justify-center rounded-2xl bg-gradient-to-br from-primary to-primary/60 shadow-sm ring-1 ring-primary/20"
            aria-hidden="true"
          >
            <span class="text-lg font-bold text-primary-foreground">10x</span>
          </div>
          <div>
            <div class="text-3xl font-semibold tracking-tight">10x Facts</div>
            <div class="mt-1 text-sm text-muted-foreground">
              Szybka nauka przez fiszki i ciekawostki.
            </div>
          </div>
        </div>
        <slot />
      </div>
    </main>
  </div>
</MainLayout>
